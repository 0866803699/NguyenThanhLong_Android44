<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:layout_gravity="center|top"
        android:background="@drawable/bo_vien">

        <ImageView
            android:id="@+id/imFavorite"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/favorites" />

        <ImageView
            android:id="@+id/imItem"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/imFavorite"
            android:layout_centerInParent="true"
            android:src="@drawable/monngon" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imItem"
            android:text="@string/item_food1"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <LinearLayout
            android:id="@+id/start"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imStar1"
                android:src="@drawable/ic_baseline_star_24"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageView
                android:id="@+id/imStar2"
                android:src="@drawable/ic_baseline_star_24"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageView
                android:id="@+id/imStar3"
                android:src="@drawable/ic_baseline_star_24"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageView
                android:id="@+id/imStar4"
                android:src="@drawable/ic_baseline_star_24"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageView
                android:id="@+id/imStar5"
                android:src="@drawable/ic_baseline_star_24"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/start"
            android:layout_marginTop="20dp"
            android:text="@string/item_food2"
            android:textColor="@color/black" />
        <RelativeLayout

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_baseline_add_24" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>